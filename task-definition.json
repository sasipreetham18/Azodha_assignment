{
  "family": "azodha-devops-assignment-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::804686432215:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::804686432215:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "azodha-api",
      "image": "804686432215.dkr.ecr.ap-south-1.amazonaws.com/azodha-devops-assignment:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/azodha-devops-assignment",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
