{
  "family": "azodha-devops-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [{
    "name": "azodha-service",
    "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/azodha-devops-assignment:latest",
    "portMappings": [{"containerPort": 8080,"protocol":"tcp"}],
    "essential": true,
    "environment": [
      {"name":"ENV","value":"prod"}
    ],
    "secrets": [
      {"name":"DB_PASSWORD","valueFrom":"arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:mydbpass"}
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/azodha",
        "awslogs-region": "REGION",
        "awslogs-stream-prefix": "azodha"
      }
    },
    "healthCheck": {
      "command": ["CMD-SHELL", "curl -f http://localhost:8080/health || exit 1"],
      "interval": 30,
      "timeout": 5,
      "retries": 3,
      "startPeriod": 60
    }
  }]
}

